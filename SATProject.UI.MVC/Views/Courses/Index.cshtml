@model IEnumerable<SATProject.DATA.EF.Models.Course>

@{
    ViewData["Title"] = "Courses";
}

@section css {
<!-- Custom styles for lists template -->
<link href="~/css/style.css" rel="stylesheet">
<link href="~/css/style-responsive.css" rel="stylesheet">
<link rel="stylesheet" href="~/css/to-do.css">
}

<section class="wrapper site-min-height">
    <!-- COMPLEX TO DO LIST -->
    <div class="row mt">
        <div class="col-md-12">
            <section class="task-panel tasks-widget">
                <div class="panel-heading">
                    <div class="pull-left">
                        <h5> @ViewData["Title"]</h5>
                    </div>
                    <br>
                </div>
                <div class="panel-body">
                    <div class="task-content">
                        <ul class="task-list">
                                @foreach (var item in Model)
                                {
                                    <li>
                                        <div class="task-title">
                                            @if (User.IsInRole("Admin"))
                                                {
                                            <a asp-action="Details" asp-route-id="@item.CourseId">@Html.DisplayFor(modelItem => item.CourseName)</a>
                                        }
                                        else
                                        {
                                            @item.CourseName
                                        }
                                        <div class="pull-right">
                                               @if (User.IsInRole("Admin"))
                                                {
                                                <a class="btn btn-primary btn-xs" asp-action="Edit" asp-route-id="@item.CourseId"><i class="fa fa-pencil"></i></a>
                                                <a class="btn btn-success btn-xs" asp-action="Details" asp-route-id="@item.CourseId"><i class="fa fa-eye"></i></a>
                                                <a class="btn btn-danger btn-xs" asp-action="Delete" asp-route-id="@item.CourseId"><i class="fa fa-trash"></i></a>
                                                }
                                            </div>
                                        </div>
                                    </li>
                                }
                            
                        </ul>
                    </div>
                    @if (User.IsInRole("Admin"))
                    {
                        <div class=" add-task-row">
                            <a class="btn btn-success btn-sm pull-left" asp-action="Create">Add Course</a>
                        </div>
                    }
                </div>
            </section>
        </div>
        <!-- /col-md-12-->
    </div>
    <!-- end to do list-->
</section>

@section Scripts {
<script src="http://code.jquery.com/ui/1.10.3/jquery-ui.js"></script>
<script src="lib/tasks.js" type="text/javascript"></script>
<script>
    jQuery(document).ready(function() {
      TaskList.initTaskWidget();
    });

    $(function() {
      $("#sortable").sortable();
      $("#sortable").disableSelection();
    });
</script>
}








