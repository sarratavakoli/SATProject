@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="nav pull-right top-menu">
@*<ul class="navbar-nav">*@
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="logout" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@User.Identity?.Name</a>
    </li>
    <li class="nav-item">      
        <a class="logout"  asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">Logout</a>        
    </li>
}
else
{
    <li class="nav-item">
        <a class="logout" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="logout" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
