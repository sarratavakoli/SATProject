@*@*
    This is a model declaration. Each View can only have ONE model tied to it.
    The model declaration ensures this view knows how to display & send info using the provided model.
*@


@model SATProject.UI.MVC.Models.ContactViewModel

@{
    ViewData["Title"] = "Contact";
}


        <!-- ======= Contact Section ======= -->
     

     
      <section class="wrapper">
        <h3><i class="fa fa-angle-right"></i> Contact Form</h3>
        <!-- BASIC FORM ELELEMNTS -->
        <div class="row mt">
          <div class="col-lg-6 col-md-6 col-sm-6">
            <h4 class="title">Contact Form</h4>
            <div id="message"></div>
           <form asp-action="Contact" class="contact-form php-email-form">
            <div asp-validation-summary="ModelOnly" ></div>
            <div class="form-group">
                 <input asp-for="Name" class="form-control" placeholder="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Email" class="form-control" placeholder="Email"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Subject" class="form-control"placeholder="Subject" />
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <textarea asp-for="Message"  class="form-control" placeholder="Message"  rows="5" ></textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <div class="form-send">
                <button type="submit" value="Send Message" class="btn btn-large btn-primary">Send Message</button> 
            </div>
        </form>
          </div>

          <div class="col-lg-6 col-md-6 col-sm-6">
            <h4 class="title">Contact Details</h4>
            <p>Having problems removing a student or scheduling courses, please reach out with any questions or difficulties you are having and we will get back to you as soon as possible </p>
            <ul class="contact_details">
              <li><i class="fa fa-envelope-o"></i> info@yoursite.com</li>
              <li><i class="fa fa-phone-square"></i> +34 5565 6555</li>
              <li><i class="fa fa-home"></i> Some Fine Address, 887, Madrid, Spain.</li>
            </ul>
            <!-- contact_details -->
          </div>
        </div>

           <section class="contact" data-aos="fade-up" data-aos-easing="ease-in-out" data-aos-duration="500">
            <div class="container">

               

                @*
                    If something went wrong when sending the email, display the ErrorMessage
                    to the user.
                *@

                @if(ViewBag.ErrorMessage != null)
            {
                <div class="row">
                    <p style="color: red; font-style: italic;">
                        @Html.Raw(ViewBag.ErrorMessage)
                    </p>
                    </div>
            }
        <!-- /row -->
        </div>
        </section>


        <!-- /row -->
      </section>
      <!-- /wrapper -->
         
                   

